{
  "name": "offline-gateway",
  "version": "0.1.5",
  "main": "dist/index.js",
  "repository": "https://github.com/deptno/dynamon.git",
  "description": "offline gateway, zero configuration, file based, supported dynamodb-local stream",
  "author": "Bonggyun Lee <deptno@gmail.com>",
  "license": "MIT",
  "bin": {
    "offline-gateway": "dist/bin.js",
    "ogw": "dist/bin.js"
  },
  "scripts": {
    "build": "npm run tsc",
    "build:watch": "npm run tsc -- --watch",
    "tsc": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.13",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/node": "8.10",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "aws-sdk": "^2.351.0",
    "express": "^4.16.4",
    "express-unset-route": "^0.1.1",
    "fast-glob": "^2.2.3",
    "glob-watcher": "^5.0.1",
    "ramda": "^0.25.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.(test|spec).ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
